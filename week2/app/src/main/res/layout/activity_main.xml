<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:id="@+id/icon"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo_small"
            android:layout_marginTop="30dp"
    />
    <TextView
            android:id="@+id/welcome"
            android:text="Welcome to Android!"
            android:layout_below="@+id/icon"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#42C516"
            android:layout_marginTop="20dp"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sign"
            android:text="Sign in to continue"
            android:layout_below="@+id/welcome"
            android:layout_centerHorizontal="true"
            android:textColor="#3E478D"
            android:layout_marginTop="5dp"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/username"
            android:text="USERNAME"
            android:layout_below="@+id/sign"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
    />
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/entername"
            android:hint="Enter your Username"
            android:layout_below="@+id/username"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/password"
            android:text="PASSWORD"
            android:layout_below="@+id/entername"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
    />
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/enterpassword"
            android:hint="Enter your password"
            android:layout_below="@+id/password"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
    />
    <Button android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:text="Sign in"
            android:layout_below="@+id/enterpassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textColor="#F7FAF9"
            android:textSize="20dp"
            android:background="@drawable/button_background"
    />
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/button"
              android:layout_centerHorizontal="true"
              android:hint="SIGN UP FOR ACCOUNT?"
              android:textColor="#3E478D"
              android:layout_marginTop="20dp"
    />
</RelativeLayout>